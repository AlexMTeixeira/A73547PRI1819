extends layout.pug

block corpo
    .w3-container 
        .w3-card-4
            header.w3-container.w3-teal
                h1= titulo
            .w3-container
                table.w3-table.w3-all
                    tr
                        th Tipo
                        td= tipo
                    tr
                        th Título
                        td= titulo
                    if subtitulo
                        tr
                            th Subtítulo
                            td= subtitulo
                    tr
                        th Compositor
                        td= compositor
                    if desc
                        tr
                            th Descrição
                            td= desc
                    if instrumentos    
                        tr
                            th Instrumentos
                            td 
                                each i in instrumentos
                                    ul.w3-ul.w3-card-4
                                        li.w3-bar-item
                                            b Nome do Instrumento
                                            p= i.nome
                                            if i.partitura.voz
                                                b Voz
                                                p= i.partitura.voz
                                            if i.partitura.clave
                                                b Clave
                                                p= i.partitura.clave
                                            if i.partitura.afinacao
                                                b Afinação
                                                p= i.partitura.afinacao
                                            if i.partitura.path
                                                b Ficheiro
                                                p= i.partitura.path                   
            footer.w3-container.w3-teal
                p
                    a(href='http://localhost:6001/index') 
                        | Voltar à página principal
                address Geardo por ArquivoMusicalDigital by AT
                   