extends layout.pug
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Teses
            .w3-container
                br
                table.w3-table-all
                    tr
                        th Nome do Aluno
                        th Número / Identificador do Aluno
                        th Curso
                        th Instituição
                        th Título da Tese
                        th Data de Conclusão
                        th Tipo de Tese
                    each t in list
                        tr
                            td= t.nome
                            td= t.numero
                            td= t.curso
                            td= t.instituicao
                            td= t.titulo
                            td= t.data
                            td= t.tipo
                br
            footer.w3-container.w3-teal
                table.w3-table
                    tr
                        th
                            address Gerado por thesisApp
                        th.w3-right
                            form.w3-container(action='/', method='GET')
                                input.w3-btn.w3-blue-grey(type='submit', value='Home')