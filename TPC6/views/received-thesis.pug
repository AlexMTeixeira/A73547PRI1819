extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de Tese
            .w3-container
                h5 Informação do Aluno
                table.w3-table-all
                    tr
                        th Nome
                        td= t.nome
                    tr
                        th Número / Identificador
                        td= t.numero
                    tr
                        th Curso
                        td= t.curso
                    tr 
                        th Instituição
                        td= t.instituicao
                h5 Informação da Tese
                table.w3-table-all
                    tr
                        th Título
                        td= t.titulo
                    tr
                        th Data
                        td= t.data
                    tr
                        th Tipo
                        td= t.tipo
                br
            footer.w3-container.w3-teal
                table.w3-table
                    tr
                        th
                            address Gerado por thesisApp
                        th.w3-right
                            form.w3-container(action='/', method='GET')
                                input.w3-btn.w3-blue-grey(type='submit', value='Home')