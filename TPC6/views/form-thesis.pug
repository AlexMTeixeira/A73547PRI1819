extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de Tese
            .w3-container
                form.w3-container(action='/processaForm', method='POST')
                    h5 Informação do Aluno
                    label.w3-text-teal
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text', name='nome')
                    label.w3-text-teal
                        b Número / Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text', name='numero')
                    label.w3-text-teal
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text', name='curso')
                    label.w3-text-teal
                        b Instituição
                    input.w3-input.w3-border.w3-light-grey(type='text', name='instituicao')
                    hr
                    h5 Informação da Tese
                    label.w3-text-teal
                        b Título
                    input.w3-input.w3-border.w3-light-grey(type='text', name='titulo')
                    label.w3-text-teal
                        b Data
                    input.w3-input.w3-border.w3-light-grey(type='date', name='data')
                    label.w3-text-teal
                        b Tipo
                    br
                    input.w3-radio.w3-light-grey(type='radio', name='tipo', value='mestrado') 
                    label.w3-text-teal 
                        b Mestrado &#09;
                    input.w3-radio.w3-light-grey(type='radio', name='tipo', value='doutorado')
                    label.w3-text-teal 
                        b Doutorado
                    hr
                    input.w3-btn.w3-blue-grey(type='submit', value='Enviar')
                br
            footer.w3-container.w3-teal
                table.w3-table
                    tr
                        th
                            address Gerado por thesisApp
                        th.w3-right
                            form.w3-container(action='/', method='GET')
                                input.w3-btn.w3-blue-grey(type='submit', value='Home')
                    
                