extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Upload de Ficheiros
            br
            .w3-container
                form.w3-container(action='/processaForm', method='POST', enctype='multipart/form-data')
                    label.w3-text-teal
                        b Ficheiro
                    input.w3-input.w3-border.w3-light-grey(type='file', name='ficheiro')
                    label.w3-text-teal
                        b Descrição
                    input.w3-input.w3-border.w3-light-grey(type='text', name='desc')
                    input.w3-btn.w3-blue-grey(type='submit', value='Enviar')
            .w3-container
                h5.w3-text-teal.w3-center
                    b Ficheiros Enviados
                table.w3-table-all
                    tr.w3-text-teal
                        th Ficheiro
                        th Descição
                    each i in l
                        tr
                            td
                                a(href=i.path)= i.file
                            td= i.desc
            br
            footer.w3-container.w3-teal
                address Gerado por formApp
                