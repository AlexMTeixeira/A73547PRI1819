extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-gray
                h3 Lista de Ficheiros
            br
            .w3-container
                h3.w3-text-gray.w3-center
                    b Ficheiros Enviados
                table.w3-table-all
                    tr.w3-text-gray
                        th Ficheiro
                        th Descição
                    each i in l
                        tr
                            td
                                a(href='/data/'+i.file)= i.file
                            td= i.desc
                br
            footer.w3-container.w3-light-gray
                table.w3-table
                    tr
                        th
                            address Gerado por FilesSubmit
                        th.w3-right
                            form.w3-container(action='/', method='GET')
                                input.w3-btn.w3-light-gray(type='submit', value='Home')